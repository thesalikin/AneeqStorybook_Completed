<EditForm Model="@Patron" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>First Name: </label>
            <div>
                <InputText @bind-Value="@Patron.FirstName" class="form-control" />
                <ValidationMessage For="@(() => Patron.FirstName)" />
            </div>
        </div>

        <div class="form-group">
            <label>Last Name: </label>
            <div>
                <InputText @bind-Value="@Patron.LastName" class="form-control" />
                <ValidationMessage For="@(() => Patron.LastName)" />
            </div>
        </div>

        <div class="form-group">
            <label>Contact Number: </label>
            <div>
                <InputText @bind-Value="@Patron.ContactNumber" class="form-control" />
                <ValidationMessage For="@(() => Patron.ContactNumber)" />
            </div>
        </div>

        <div class="form-group">
            <label>Email Address: </label>
            <div>
                <InputText @bind-Value="@Patron.EmailAddress" class="form-control" />
                <ValidationMessage For="@(() => Patron.EmailAddress)" />
            </div>
        </div>
    </fieldset>

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="Patrons" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Patron Patron { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
